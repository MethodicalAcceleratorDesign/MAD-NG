-- show update (interactive)
do
  local eps in MAD.gmath
  local printf in MAD.utility
  local option, beam, range in MAD
  MAD.option.format = "%- .10f"
  beam:show()

  beam450 = beam { particle = 'proton', energy = 7000 }
  beam450:show()

  print('n',' deltap','',' energy','','',' pc','','',' beta','',' gamma')
  beamdp = beam450 {}
  for n,dp in ipairs(-0.02..0.02..5e-3) do
    beamdp.pc = beam450.pc * (1+dp)
    printf("%d\t%- .5f\t%- .10f\t%- .10f\t%- .10f\t%- .10f\n",
           n, dp, beamdp.energy, beamdp.pc, beamdp.beta, beamdp.gamma)
  end

  beamdp.pc = beam450.pc * (1 - 1 + eps) -- rest energy
  printf("%d\t%- .5f\t%- .10f\t\t%- .10f\t\t%- .10f\t%- .10f\n",
         0, -1, beamdp.energy, beamdp.pc, beamdp.beta, beamdp.gamma)
end

