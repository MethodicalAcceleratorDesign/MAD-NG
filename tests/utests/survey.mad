function TestSurvey:testSurveyIterLHC1()
  local lhcb1 in MADX
  local tbl, map
  for i=1,#lhcb1 do
    tbl, map = survey { sequence=lhcb1, range=i, table=tbl, map=map }
  end
  assertEquals(#tbl, 13267)
  tbl:write('survey_lhcb1_iter')
 end

