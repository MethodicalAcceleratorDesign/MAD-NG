  local Vres = {-1.70492965855137180, 0, 1.70492965855137246}
  local Ares = {-1.57079632679489634, 0, 0}
  assertAllAlmostEquals( V:totable(), Vres, eps )
  assertAllAlmostEquals( A:totable(), Ares, eps )
