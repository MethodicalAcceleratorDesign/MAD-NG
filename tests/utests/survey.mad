    srotation 'mt1' { at= 0, angle=tlt },
    yrotation 'my1' { at= 0, angle=a*ang/2 },
    yrotation 'my2' { at=dl, angle=a*ang/2 },
    srotation 'mt2' { at=dl, angle=-tlt },
