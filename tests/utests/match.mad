-- Example from NLOpt tutorial

local function testFuncFn (x, grd)
  if grd then
    grd[1] = 0.0
    grd[2] = 0.5 / sqrt(x[2])
  end
  return sqrt(x[2])
end

local function testFuncLe (x, r, jac)
  local a, b = 2, 0
  if jac then
    jac[1] = 3*a*(a*x[1]+b)^2
    jac[2] = -1
  end
  r[1] = (a*x[1]+b)^3 - x[2]

  local a, b = -1, 1
  if jac then
    jac[3] = 3*a*(a*x[1]+b)^2
    jac[4] = -1
  end
  r[2] = (a*x[1]+b)^3 - x[2]
end

local function testMatchFunc1 (x, mth, fmin)
  local fun = testFuncFn
  local exe = fmin == nil and fun or \ -> fun(x)-fmin

  return match {
    variables = { rtol=1e-4,
      { var = 'x[1]', min = -inf },
      { var = 'x[2]', min =  0   },
    },
    inequalities = { exec=testFuncLe, nequ=2, tol=1e-8 },
    objective    = { exec=exe, method=mth },
    maxcall=100, !info=2, debug=2
  }
end

local function testMatchFunc2 (x, mth, fmin)
  local fun = testFuncFn
  local equ = fmin and { expr := fun(x)-fmin }
  local exe = fmin == nil and fun or nil

  return match {
    variables = {
      { var = 'x[1]', min = -inf },
      { var = 'x[2]', min =  0   },
    },
    equalities   = { equ },
    inequalities = { exec=testFuncLe, nequ=2, tol=1e-8 },
    objective    = { exec=exe, method=mth, fmin=sqrt(8/27)+1e-3 },
    maxcall=100, !info=2, debug=2
  }
end

-- Example from Octave tutorial
-- Note: Octave succeeds to find a solution but reports roundoff error...

local function testMatchFunc3 (x, mth, fmin)
  local fun = \ -> exp(x:prod()) - 0.5*(x[1]^3+x[2]^3+1)^2
  local equ = fmin and { expr := fun(x)-fmin, tol=1e-8 }
  local exe = fmin == nil and fun or nil

  return match {
    command := print(x:sumsqr(), exp(x:prod())),
    variables = {
      { var = 'x[1]', min=-2, max=2 },
      { var = 'x[2]', min=-2, max=2 },
      { var = 'x[3]', min=-2, max=2 },
      { var = 'x[4]', min=-2, max=2 },
      { var = 'x[5]', min=-2, max=2 },
    },
    equalities = {
      { expr := x:sumsqr() - 10         },
      { expr := x[2]*x[3] - 5*x[4]*x[5] },
      { expr := x[1]^3+x[2]^3+1         },
      equ
    },
    objective = {
      exec=exe, method=mth, tol=1e-8, grad=false
    },
    maxcall=5, info=5, debug=2
  }
end

-- Example #71 from Hock-Schittkowsky test suite (all algos fail)

