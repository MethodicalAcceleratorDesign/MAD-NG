local E = MAD.element
E. kicker.knl = \s -> ( s.hkick and { -s.hkick } )
E. kicker.ksl = \s -> ( s.vkick and {  s.vkick } )
E.hkicker.knl = \s -> ((s.hkick or s.kick) and { -(s.hkick or s.kick) })
E.vkicker.ksl = \s -> ((s.vkick or s.kick) and {   s.vkick or s.kick  })
