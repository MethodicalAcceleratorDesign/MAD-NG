  assertErrorMsgContains( msg[2], mth, 'mixed', m1         , m1         , nil         )
  assertErrorMsgContains( msg[2], mth, 'mixed', m1         , m1         , ''          )
  assertErrorMsgContains( msg[2], mth, 'mixed', m1         , m1         , 1           )
  assertErrorMsgContains( msg[2], mth, 'mixed', m1         , m1         , 1..2        )
  assertErrorMsgContains( msg[2], mth, 'mixed', m1         , m1         , {}          )
