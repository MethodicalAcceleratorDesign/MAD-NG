  assertErrorMsgContains( msg[1], mth, 'setsub', errCMat, ''  , 1  , 1i  )
  assertErrorMsgContains( msg[1], mth, 'setsub', errCMat, NaN , 1  , 1i  )
  assertErrorMsgContains( msg[1], mth, 'setsub', errCMat, \x x, 1  , 1i  )
