        local r = 1..nc*#ra
        cm:setrow(ra,r)
        for ii=1,#ra do
        for jj=1,nc  do
          assertEquals( cm:getrow(ra):get(ii,jj), idx(ii,jj,nc)+0i )
        end end
        cm:setrow(ra,0)
      end
    end end
  end
end

