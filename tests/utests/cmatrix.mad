    G.cmatidx[#G.cmatidx+1] = cmatrix(nr,nc):fill(1..nr*nc):map(\x x+x*1i)
    G.cmattmp[#G.cmattmp+1] = cmatrix(nr,nc)
    G.matidx [#G.matidx+1]  =  matrix(nr,nc):fill(1..nr*nc)
    G.size   [#G.size+1]   = {nr,nc}
  end
end

