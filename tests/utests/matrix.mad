    assertEquals( m:filter_out(2..#m, \x x == 1, {}), totable(2..#m))
    assertEquals( m:filter_out(3..#m, \x x ~= 1, {}), {}         )
    --identity ->
    assertEquals( m:filter_out(\x x>=6    ), m:filter(1..#m, MAD.gfunc.compose(MAD.gfunc.lnot, \x x>=6)) )
  end
end

