local function refMul(m1, m2, i, j )
  local mref = matrix(m1.nrow, m2.ncol)
  for i=1,m1.nrow do
  for j=1,m2.ncol do
    local x = 0
    for ii=1,m1.ncol
      do x = x + m1:get(i,ii) * m2:get(ii,j)
    end
    mref:set(i,j,x)
  end end
  return mref
end

