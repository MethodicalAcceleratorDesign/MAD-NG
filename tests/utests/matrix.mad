    else                 for i=1,nc   do t[i]=false end               end
    assertEquals( m:all( \x x<16, 'col', {}), t )

    t = table.new(nr,1)
    if mn >= 16 then for i=1,3  do t[i]=true  end
                     for i=4,nr do t[i]=false end
    else             for i=1,nr do t[i]=true  end end
    assertEquals( m:all( \x x<16, 'row', {}), t )
  end
