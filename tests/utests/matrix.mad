    m1 = m  * vr
    m2 = vr * diagW
    assertTrue( m1:eq(m2, 64*eps) )
    -- W'*A - D*W'
    m1 = vl:t() * m
    m2 = diagW  * vl:t()
    assertTrue( m1:eq(m2, 64*eps) )
  end
end

