      assertEquals( {mres:sizes()}, {m1:nrow(), cm2:ncol()} )
      assertTrue  ( is_cmatrix(mres) )
      for i=1,m1 :nrow() do
      for j=1,cm2:ncol() do
        assertEquals( mres:get(i,j), ref(m1,cm2,i,j) )
