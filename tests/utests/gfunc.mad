function TestGfunc:testCompose()
  local id, id1, id4 = \n,...(n+1,...), \...(1,...), \n n
  local f = compose(id4,compose(id,compose(id,compose(id,id1))))
  assertEquals ( f(0  ), 4 )
  assertEquals ( f(1  ), 4 )
  assertEquals ( f(nan), 4 )
  assertEquals ( f(nil), 4 )
end

