  show_res         = show_res        ,
  plot_res         = plot_res        ,
  plot_trk_res     = plot_trk_res    ,
  get_trk_y_val    = get_trk_y_val   ,
  get_prev_res     = get_prev_res    ,
  newSID           = newSID          ,
  in_dir           = in_dir          ,
  out_dir          = out_dir         ,
  plt_dir          = plt_dir         ,
  args_to_cfg      = args_to_cfg     ,
  get_lower_bnds   = get_lower_bnds  ,
