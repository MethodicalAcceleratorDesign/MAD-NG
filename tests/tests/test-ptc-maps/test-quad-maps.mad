      },
      legend      = {
        y1 = "e1 = e2 = 0",
        y2 = "e1 != 0 or e2 != 0",
      },
      filename    = "quad-face-fringe-comparision.png",
    }
  }
  run_test(cfg)
end

testQUAD()
testQUADm()
testQUADf()
-- testQUADh()
testQUADfh()
testQUADhe()