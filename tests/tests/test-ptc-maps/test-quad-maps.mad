local function testQUADhe ()
  local cfg = ref_cfg "quadhe" {
    elm = [[
      QUADRUPOLE, at=0.75, l=1.5, k1=${k1}, k1s=${k1s}, fringe=7,
      k0=${k0}, e1=${e1}, e2=${e2}, h1=${h1}, h2=${h2}, bend_fringe=true,
      frngmax=${frngmax}
    ]],
    
    tol = 500,
    
    model  = {1},
    method = {2},
    nslice = {1},
    energy = {1},

    k1          = {0, 0.2},
    k1s         = \s->s.k1,
    k0          = {0, 0.05},
    e1          = {0, 0.4, 0.7}, 
    e2          = {0, 0.3, 0.8},
    h1          = {0, 0.04, 0.05},
    h2          = {0, 0.04, 0.05},
    frngmax  = {2, 5},
    alist = tblcat(
      ref_cfg.alist, 
      {"k1", "k1s", "k0", "e1", "e2", "h1", "h2", "frngmax"}
    ),

    plot_info = {
      title       = "Quadrupole with face and fringe Comparison",
      series      = {
        "${e1} == 0 and ${e2} == 0",
