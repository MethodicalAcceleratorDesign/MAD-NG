  local cfg = ref_cfg "rbendfhs"{
    elm = [[
      RBEND, at=0.75, l=1.5, angle=${k0}*2*pi/1e2, k1 = ${k1},
      hgap=${hgap}, fint=${fint}, fintx=${fintx}, f1=${f1}, f2=${f2},
      kill_ent_fringe=${no_fringe}, kill_exi_fringe=${no_fringe},
      ptcrbend=true, truerbend=true, e1=${e1}*2*pi/1e2, e2=${e2}*2*pi/1e2;
    ]], ! 
    tol = 800,
    model  = {1},
    method = {2},    
    nslice = {1},
    energy = {1},
    
    alist = tblcat(
      ref_cfg.alist,
      {"k0", "no_fringe", "hgap", "fint", "fintx", "e1", "e2", "k1", "f1", "f2"}
    ), 
    k0        = {0.5},
    k1        = {0, 0.5},
    no_fringe = {true, false},
    hgap      = {0, 0.05},
    fint      = {0, 0.7},
    fintx     = {0, 0.7},
    f1        = {0, 0.3},
    f2        = {0, 0.8},
    e2        = {0, 0.1, -0.3},
    e1        = \s -> s.e2,

    plot_info = {
      series      = { "${e1} ~= 0 or ${e2} ~= 0", "${e1} == 0 and ${e2} == 0" },
      legend      = {y1 = "e1 or e2 non zero", y2 = "e1 and e2 zero"},
      title       = "RBend Fringe and Face with k1 Comparison",
      filename    = "rbend-fringe-face-k1-comparison.png",
    }
  }
  run_test(cfg)
end

function TestRBend:testRBENDfm()
  local cfg = ref_cfg "rbendfm" {
    elm = [[
      RBEND, at=0.75, l=1.5, angle=${k0}*2*pi/1e2, knl=${knl}, ksl=${ksl},
      kill_ent_fringe=${no_fringe}, kill_exi_fringe=${no_fringe},
      fringe=${fringe}, frngmax=${frngmax}
    ]],

    tol = 4e3,
    model  = {1},
    method = {2},    
    nslice = {1},
    energy = {1},
    fringe = \s-> s.cur_cfg.no_fringe and 0 or 7,
    
    alist = tblcat(
      ref_cfg.alist, 
      {"k0", "no_fringe", "knl", "ksl", "frngmax"}
    ), 
    k0        = {0.5},
    no_fringe = {true, false},
    frngmax = 2..5,
    knl       = {
      {}, 
      {0, 0.15, 2.2, 31, 78}
    },
    ksl       = \s-> s.knl,

    plot_info = \s -> {
      title       = "RBend Multiple Fringe Comparison",
      series      = {
        "'${knl}' == '" .. tostring(s.knl[1]) .. "'",
        "'${knl}' == '" .. tostring(s.knl[2]) .. "'", 
      },
      legend = {
        y1 = "Empty knl",
        y2 = "Filled knl",
      },
      filename    = "rbend-fringe-CFM-comparison.png",
    }
  }
  run_test(cfg)
end

-- Takes about 15 mins (utests take about 2 mins)
if debug.getinfo(3) == nil then
  TestRBend:testRBEND()
  TestRBend:testRBENDfr()
  TestRBend:testRBENDfe()
  TestRBend:testRBENDfh()
  TestRBend:testRBENDfhs()
  TestRBend:testRBENDfm()
end