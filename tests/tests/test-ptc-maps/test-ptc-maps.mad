    elm = [[
      QUADRUPOLE, at=0.75, l=1.5, k1=${k1}, k1s=${k1s}, tilt=${tilt}*pi/8,
      fringe=${fringe}
    ]],
    
    tol = 25,

    model  = {2}, -- Use TKT as faster
    method = {2},    
    nslice = {1},
    energy = {1},

    tilt   = 0..4,
    fringe = 0..3..3,
    k1   = {0, 0.2},
    k1s  = \s->s.k1,
    alist = tblcat(ref_cfg.alist, {"tilt", "fringe", "k1", "k1s"}),
  }
  run_test(cfg)
end

