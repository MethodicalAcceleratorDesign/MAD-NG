return {
  option    = option,
  typeid    = typeid,
  concept   = concept,
  utility   = utility,
  operator  = operator,
  algorithm = algorithm,

  same      = same,
  totable   = totable_,
  tostring  = tostring_,

  __help   = __help,
}
