-- debug ----------------------------------------------------------------------o

local assertf in MAD.utility

local val = \a   -> is_number(a) and a or a:get0()
local get = \a   -> _C.mad_tpsa_get0(a)
local ceq = \a,b -> a == b
local peq = \a,b -> val(a) == get(b)

local function chckflw (e, m, skip)
  if m.debug < 4 or not m.cmap then return end

  local str = e.name .. " (" .. e.kind .. ") inconsistent %s %g ~= %g"
  local eld, c = m.eld or 0
  if m.cmap ~= 'p' then
    local c, eld = m.tflw, m.eld or 0
    assertf(ceq(m.el  , c.el  ), str, "el  ", m.el  , c.el  )
    assertf(ceq(  eld , c.eld ), str, "eld ",   eld , c.eld )
    assertf(ceq(m.elc , c.elc ), str, "elc ", m.elc , c.elc )
    assertf(ceq(m.lrad, c.lrad), str, "lrad", m.lrad, c.lrad)
    assertf(ceq(m.eh  , c.eh  ), str, "eh  ", m.eh  , c.eh  )
    assertf(ceq(m.ang , c.ang ), str, "ang ", m.ang , c.ang )
    assertf(ceq(m.ks  , c.ks  ), str, "ks  ", m.ks  , c.ks  )
    assertf(ceq(m.k1  , c.k1  ), str, "k1  ", m.k1  , c.k1  )
    assertf(ceq(m.ca  , c.ca  ), str, "ca  ", m.ca  , c.ca  )
    assertf(ceq(m.sa  , c.sa  ), str, "sa  ", m.sa  , c.sa  )
    assertf(ceq(m.nmul, c.nmul), str, "nmul", m.nmul, c.nmul)
    assertf(ceq(m.snm , c.snm ), str, "snm ", m.snm , c.snm )
    assertf(ceq(m.npar, c.npar), str, "npar", m.npar, c.npar)
    if not skip then
    assertf(ceq(m.tlt , c.tlt ), str, "tlt ", m.tlt , c.tlt )
    end
  else -- m.cmap == 'p'
    c = m.pflw
    assertf(peq(m.el  , c.el  ), str, "el  ", val(m.el  ), get(c.el  ))
    assertf(peq(  eld , c.eld ), str, "eld ", val(  eld ), get(c.eld ))
    assertf(peq(m.elc , c.elc ), str, "elc ", val(m.elc ), get(c.elc ))
    assertf(peq(m.lrad, c.lrad), str, "lrad", val(m.lrad), get(c.lrad))
    assertf(peq(m.eh  , c.eh  ), str, "eh  ", val(m.eh  ), get(c.eh  ))
    assertf(peq(m.ang , c.ang ), str, "ang ", val(m.ang ), get(c.ang ))
    assertf(peq(m.ks  , c.ks  ), str, "ks  ", val(m.ks  ), get(c.ks  ))
    assertf(peq(m.k1  , c.k1  ), str, "k1  ", val(m.k1  ), get(c.k1  ))
    assertf(peq(m.ca  , c.ca  ), str, "ca  ", val(m.ca  ), get(c.ca  ))
    assertf(peq(m.sa  , c.sa  ), str, "sa  ", val(m.sa  ), get(c.sa  ))
    assertf(peq(m.nmul, c.nmul), str, "nmul", val(m.nmul), get(c.nmul))
    assertf(peq(m.snm , c.snm ), str, "snm ", val(m.snm ), get(c.snm ))
    assertf(peq(m.npar, c.npar), str, "npar", val(m.npar), get(c.npar))
    if not skip then
    assertf(peq(m.tlt , c.tlt ), str, "tlt ", val(m.tlt ), get(c.tlt ))
    end
  end

  for i=1,m.npar do
    assertf(m[i].__ta == c.par[i-1], str, "tpsa", i, i-1)
  end
end

-- helper ---------------------------------------------------------------------o

local function get_slc (elm, mflw, lw)
  local slc = elm.nslice or mflw.nslice

  if is_function(slc) then
    slc = slc(elm, mflw, lw)
  end

  local sdir in mflw
  if is_number(slc) then
    local nsl = max(slc, mflw.nslc) ; mflw.nsl = nsl
    return nsl, lw/nsl, nil, nil, sdir
  else
    local nsl = #slc ; mflw.nsl = nsl
    return nsl, nil, slc, sdir > 0 and 0 or nsl+1, sdir
  end
end

M.get_slicing = get_slc

-- single step integrators ----------------------------------------------------o

local txflw_ = { r = 'rflw_', t = 'tflw_', p = 'pflw_' }
local  xflw_ = \m -> not m.pmap and m[txflw_[m.cmap]]

local function thinonly (elm, mflw, lw, kick)
  local fsl = mflw.atslice
  local flw = xflw_(mflw)
  mflw.nsl = 1

  chckflw(elm, mflw, true)

  -- 1 kick
     fsl(elm, mflw, 0 , 0)
  if flw then
    _C.mad_trk_slice_one(flw, lw, kick)
  else
    kick(elm, mflw, lw) end mflw.clw = mflw.clw + lw
     fsl(elm, mflw, lw, 1)
end

local function driftonly (elm, mflw, lw, thick)
  local fsl = mflw.atslice
  local flw = xflw_(mflw)
  mflw.nsl = 1

  chckflw(elm, mflw, true)

  -- 1 thick
      fsl(elm, mflw, 0 , 0)
  if flw then
    _C.mad_trk_slice_one(flw, lw, thick)
  else
    thick(elm, mflw, lw) end mflw.clw = mflw.clw + lw
      fsl(elm, mflw, lw, 1)
end

local function thickonly (elm, mflw, lw, thick)
  local nsl, lwn, slc, sln, dir = get_slc(elm, mflw, lw)
  local fsl = mflw.atslice
  local flw = xflw_(mflw)

  chckflw(elm, mflw, true)

  -- nsl*(1 thick)
      fsl(elm, mflw, 0, 0)
  for i=1,nsl do
    local lwi = lwn or lw*slc[sln+i*dir] ; mflw.clw = mflw.clw + lwi
  if flw then
    _C.mad_trk_slice_one(flw, lwi, thick)
  else
    thick(elm, mflw, lwi) end
      fsl(elm, mflw, lwi, i)
  end
end

-- DKD special integrators ----------------------------------------------------o

-- 2nd order: [Burkhardt13] table 1, p. 946
-- n   |           |  2  |  3  |  4   |
-- lwd | 0.5/(n+1) | 1/6 | 1/8 | 3/30 |
-- lwD | n/(n^2-1) | 4/6 | 3/8 | 8/30 |

local teapot2_d, teapot2_D, teapot2_k = 1/6, 4/6, 1/2

local function teapot2 (elm, mflw, lw, thick, kick)
  local nsl, lwn, slc, sln, dir = get_slc(elm, mflw, lw)
  local fsl = mflw.atslice
  local flw = xflw_(mflw)

  chckflw(elm, mflw)

 -- nsl*(2 kick + 3 thicks)
      fsl(elm, mflw, 0, 0)
  for i=1,nsl do
    local lwi = lwn or lw*slc[sln+i*dir] ; mflw.clw = mflw.clw + lwi
    if flw then
      _C.mad_trk_slice_tpt(flw, lwi, thick, kick, 2)
    else
    thick(elm, mflw, lwi * teapot2_d, -2)
     kick(elm, mflw, lwi * teapot2_k, -1)
    thick(elm, mflw, lwi * teapot2_D,  0) -- middle
     kick(elm, mflw, lwi * teapot2_k,  1)
    thick(elm, mflw, lwi * teapot2_d,  2)
    end
      fsl(elm, mflw, lwi, i)
  end
end

