-- useful as globals
help   = M.help
import = M.import
export = M.export

-- protect MAD environment (foolproof protection, no more)
MAD = setmetatable({},{
    __index     = M,
    __newindex := error "MAD is readonly",
    __len      := #M,
    __pairs    := pairs(M),
    __ipairs   := ipairs(M),
    __metatable = false,
  })

-- import MAD as a self reference and build help
MAD:import {
  MAD    = MAD,
  __help = require 'madh_main',
}

-- load MAD modules
