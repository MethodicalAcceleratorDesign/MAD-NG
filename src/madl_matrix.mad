function MR.unit (x, r_)
  if is_string(r_) and r_ == 'in' then r_ = x end
  local n = x:norm()
  assert(n ~= 0, "null matrix norm")
  local r = chksiz(r_,x) or x:same()
  _C.mad_vec_muln(x.data, 1/n, r.data, r:size())
  return r
end

function MC.unit (x, r_)
