  if is_nil(r_) and not is_string(d_) then
    d_, r_ = nil, d_ -- shift right
  end
  if is_string(r_) and r_ == 'in' then r_ = x end
  local r = chksiz(r_,x) or x:same()
  if is_nil(d_) or d_ == 'vec'
  then _C.mad_cvec_center(x.data, r.data, x:size(), 1)
