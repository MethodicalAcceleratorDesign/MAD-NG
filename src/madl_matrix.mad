-- right accumulation
MR.raccmin    = \x,d_,r_ -> x:scanr(min, nil, d_, r_)
MR.raccmax    = \x,d_,r_ -> x:scanr(max, nil, d_, r_)
MR.raccsum    = \x,d_,r_ -> x:scanr(add, nil, d_, r_)
