local type = type

function MR.__index (s, i)
  if type(i) == 'number'
  then return geti_s(s, i)
  else return MR[i]
  end
end

function MC.__index (s, i)
  if type(i) == 'number'
  then return geti_s(s, i)
  else return MC[i]
  end
end

function MR.__newindex (s, i, x)
  if type(i) == 'number'
  then seti_s(s, i, x)
  else error("invalid matrix member '".. tostring(i) .."'")
  end
end

