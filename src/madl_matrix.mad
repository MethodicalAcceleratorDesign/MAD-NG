function MR.foreach (x, f, d_)
  assert(is_callable(f), "invalid argument #2 (callable expected)")
  local nr, nc = x:sizes()
      if d_ == 'vec' then               -- foreach x as vector
    for i=1,nr*nc do f(geti(x,i), i) end
  elseif d_ == 'diag' then              -- foreach x diagonal
    for i=1,min(nr,nc) do f(get(x,i,i), i,i) end
  elseif d_ == 'row' or is_nil(d_) then -- foreach x row major
    for i=1,nr do for j=1,nc do f(get(x,i,j), i,j) end end
  elseif d_ == 'col' then               -- foreach x column major
    for j=1,nc do for i=1,nr do f(get(x,i,j), i,j) end end
  else
    error("invalid argument #3 (string 'vec', 'diag', row' or 'col' expected)")
  end
  return x
end

