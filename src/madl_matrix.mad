MR.all   = \x,p,d_,r_ =>
              assert(is_callable(p), "invalid argument #2 (callable expected)")
              return x:foldl(bind1st(all, p), true , d_, r_) end
MR.any   = \x,p,d_,r_ =>
              assert(is_callable(p), "invalid argument #2 (callable expected)")
              return x:foldl(bind1st(any, p), false, d_, r_) end

