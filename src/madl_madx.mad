-- locals ---------------------------------------------------------------------o

local object, option, warn                                        in MAD
local assertf, openfile, fileisnewer, strsplitall                 in MAD.utility
local bind1st                                                     in MAD.gfunc
local is_nil, is_boolean, is_number, is_string, is_callable       in MAD.typeid

