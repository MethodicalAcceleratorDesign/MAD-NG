MADX.ecollimator = collimator 'ecollimator' { }

-- strings as identifiers (should be detected by parser?)
do
  -- keywords
  local kwd = {
    'centre'     ,
    'circle'     ,
    'ellipse'    ,
    'rectellipse',
    'entry'      ,
    'exit'       ,
  }
  -- translated keywords
  local akwd = {
    center = 'centre',
