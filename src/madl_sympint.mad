    drift(elem, m, l_n * yosh8_d[2])
     kick(elem, m, l_n * yosh8_k[1])
    drift(elem, m, l_n * yosh8_d[1])
  end
end

local function simple (elem, m, l, drift, kick)
  local nst in elem
  nst = nst or m.nst
  local l_n = assert(nst >= 1 and l/nst, "invalid nst (must be >=1)")
  local l_i = l_n/2

  for i=1,nst do -- nst kicks
    drift(elem, m, l_i)
     kick(elem, m, l_n)
    l_i = l_n
  end
  drift(elem, m, l_n/2)
end

local function collim (elem, m, l, drift, kick)
  local nst in elem
  nst = nst or m.nst
  local l_n = assert(nst >= 1 and l/nst, "invalid nst (must be >=1)")
  local l_i = l_n/2

  for i=1,nst do -- nst drifts
     kick(elem, m, l_i)
    drift(elem, m, l_n)
    l_i = l_n
  end
  kick(elem, m, l_n/2)
end

-- [Burkhardt13] table 1, p. 946
local function teapot (elem, m, l, drift, kick)
  local nst in elem
  nst = nst or m.nst
  local l_n, l_d, l_D = assert(nst >= 1 and l/nst, "invalid nst (must be >=1)")
  if nst > 1 then l_d, l_D = l/(2*(nst+1)), l*nst/(nst^2-1) else l_d = l_n/2 end
  local l_i = l_d

  for i=1,nst do -- nst kicks
    drift(elem, m, l_i)
     kick(elem, m, l_n)
    l_i = l_D
  end
  drift(elem, m, l_d)
end

