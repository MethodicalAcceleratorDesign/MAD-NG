     kick(elem, m, l_n * yosh8_k[8]) -- middle
    drift(elem, m, l_n * yosh8_d[8])
     kick(elem, m, l_n * yosh8_k[7])
    drift(elem, m, l_n * yosh8_d[7])
     kick(elem, m, l_n * yosh8_k[6])
    drift(elem, m, l_n * yosh8_d[6])
