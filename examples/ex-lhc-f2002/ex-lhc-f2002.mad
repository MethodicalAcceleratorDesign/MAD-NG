local function prt_qs (seq, tw)
  printf("% 5s:  q1 = % -.6f,  q2 = % -.6f\n", seq.name, tw. q1, tw. q2)
  printf("      dq1 = % -.6f, dq2 = % -.6f\n",           tw.dq1, tw.dq2)
end

